<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    flex-direction: column;

    width: 850px;
    padding: 100px 0;
    background: #FFFFFF;
    box-shadow: 0px 0px 60px rgba(0, 0, 0, 0.05);
    border-radius: 5px;
  }

  .answers {
    display: flex;
    justify-content: space-around;

    width: 400px;
  }

  .value {
    display: flex;
    justify-content: center;
    align-items: center;

    background: #7159C1;
    color: #FFFFFF;
    border-radius: 5px;
    text-align: center;
    text-decoration: none;
    height: 30px;
    width: 50px;
  }

  .value:not(:last-child) {
    margin-right: 5px;
  }

  .level {
    display: flex;
    justify-content: space-between;

    margin: 10px;
    width: 400px;
  }
</style>

<div class="container">
  <label>
    Olá <strong>{{name}}</strong>! Tudo bem?
  </label>

  <h3>{{title}}</h3>
  <br />
  <strong>{{description}}</strong>

  <div class="level">
    <span>Pouco provável</span>
    <span>Muito provável</span>
  </div>

  <div class="answers">
    <a class="value" href="{{link}}/1?u={{id}}">1</a>
